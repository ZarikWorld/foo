<Window x:Class="wpfIssues.View.PrioritaetAendern"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfIssues.View"
        mc:Ignorable="d"
        Title="Priorität Ändern"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,5" MinHeight="25">
            <TextBox x:Name="InputTextBox" MinWidth="100" Margin="0,0,5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Button Content="OK" HorizontalAlignment="Right" Click="OkButton_Click" MinWidth="50" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>